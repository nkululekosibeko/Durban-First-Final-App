<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applicant_dash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebkg"
    tools:context=".ApplicantActivity">

    <TextView
        android:id="@+id/DashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="25sp"
        android:text="                       Hey, \n welcome to your dashboard"
        android:textColor="@color/lavender"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dashboard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:text="Full Name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>



    <!-- Button Grid Layout with Clickable Images -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:padding="16dp"
        android:layout_gravity="center">

        <!-- First Clickable Image with Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/book_appointment_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/dummp_profile"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book A \nTest"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Second Clickable Image with Label -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/view_appointment_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/view_appointments"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:elevation="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My\nBookings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>



    </GridLayout>

    <Button
        android:id="@+id/applicant_logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:cornerRadius="20dp"/>

</LinearLayout>
